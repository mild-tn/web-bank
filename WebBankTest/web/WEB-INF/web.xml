<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.DepositServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.WithdrawServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.HistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepositForward</servlet-name>
        <servlet-class>int303.web.bank2.servlet.DepositForward</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WithdrawForward</servlet-name>
        <servlet-class>int303.web.bank2.servlet.WithdrawForward</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyAccountServlet</servlet-name>
        <servlet-class>int303.web.bank2.servlet.MyAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryForward</servlet-name>
        <servlet-class>int303.web.bank2.servlet.HistoryForward</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/Deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/Withdraw</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryServlet</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepositForward</servlet-name>
        <url-pattern>/DepositForward</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WithdrawForward</servlet-name>
        <url-pattern>/WithdrawForward</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyAccountServlet</servlet-name>
        <url-pattern>/MyAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryForward</servlet-name>
        <url-pattern>/HistoryForward</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
